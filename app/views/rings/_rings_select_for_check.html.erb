<ul class="media-list">
  <li class="media">
    <div class="media-body">
      <% rings.each do |ring| %>
        <% user = ring.user %>
            <div class="col-md-6" style="vertical-align:middle;">
              <div class="col-md-9" style="text-align:left; background-color: #999; padding: 5px 10px">
                <%= link_to(controller: 'pages', action: 'check_front', method: :get, ring_id: ring.id, check_status: 'select', check_style: 'ox_front_back') do %>
                  <div class= "card card-body col-md-10" style="background-color:#900; color:#fff; margin: 0px" >
                    ‚óè <%= ring.ring_name %>
                  </div>
                <% end %>
                <div class="col-md-2" style="vertical-align:middle;">
                  <span class="badge" >
                    <% if @count_cards_of_rings[ring.id] == nil %>
                      0
                    <% else %>
                      <%= @count_cards_of_rings[ring.id] %>
                    <% end %>
                  </span>
                </div>
              </div>
            </div>
      <% end %>
    </div>
  </li>
  <%= paginate rings %>
</ul>