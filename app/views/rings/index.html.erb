<% if user_signed_in? %>
  <div class="row">
    <% breadcrumb :rings, @rings %>
    <aside class="col-md-3">
      <h5>Ring Search</h5>
      <%= form_tag(rings_search_path,:method => 'get',class: 'form-group content-center' ) do %>
        <%= text_field_tag :search ,'', class: 'form-control' %>
        <%= submit_tag 'Search', :name => nil , class: 'btn btn-primary btn-round' %>
      <% end %>
      <p>Search: <%= @search_word %>[<%= @search_count -%>]</p>
      <%= link_to 'New Ring(New window)', new_ring_path, class: 'btn btn-info btn-block' %>
    </aside>
    <div class="col-md-9">
      <%= render 'rings/rings', rings: @rings %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Flashcard</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>