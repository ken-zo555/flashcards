<% if user_signed_in? %>
  <div class="center jumbotron", style="background-color: rgba(60, 60, 60, .5); margin-top: 3rem">
    <% breadcrumb :card, @card %>
    <%= form_tag({ controller: :cards, action: :back_save }, method: :get, class: 'form-group') do %>
        <div class="form-group">
          <%= label :card, :content_1, "No. #{@card.id}" %><br />
          <%= text_area :card, :content_1, class: 'form-control form-control-lg', placeholder: "Input front side of a card.", :size=>"40x5", style: "background-color: rgba(255, 167, 167, .5); margin-top: 1rem" %>
          <%= text_area :card, :content_2, class: 'form-control form-control-lg', placeholder: "Input back side of a card.", :size=>"40x5", style: "background-color: rgba(255, 167, 167, .5); margin-top: 1rem" %>
          <%= submit_tag 'Next', class: 'btn btn-primary btn-block' %>
        </div>
    <% end %>
    <%= link_to "Back", :back %>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Flashcard</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>