<% breadcrumb :cards %>
<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-3">
      <%= render 'cards/card_form' %>
      <%= link_to 'New Card(New window)', new_card_path, class: 'btn btn-info btn-block' %>
      <%= link_to 'New Card(Step by step)', cards_front_path, class: 'btn btn-info btn-block' %>
    </aside>
    <div class="col-xs-9">
      <%= render 'cards/cards', cards: @cards %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Flashcard</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>